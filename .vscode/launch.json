{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "run",
        "start:debug"
      ],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "sourceMaps": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest Tests",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "run",
        "test:debug"
      ],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug E2E Tests",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "run",
        "test:e2e"
      ],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "sourceMaps": true
    }
  ]
}
