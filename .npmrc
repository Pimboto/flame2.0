# pnpm workspace configuration
# Configuración para mejorar el rendimiento y compatibilidad

# Usar enlaces simbólicos para los paquetes
shamefully-hoist=true

# Configuración de red
network-timeout=60000

# Auto-instalar peers
auto-install-peers=true

# Estricto para peers
strict-peer-dependencies=false

# Deshabilitar el store server para evitar problemas de conexión
use-store-server=false

# Configuración de caché
store-dir=~/.pnpm-store

# Habilitar el modo de workspace
enable-pre-post-scripts=true

# Configuración adicional para estabilidad
prefer-frozen-lockfile=true
